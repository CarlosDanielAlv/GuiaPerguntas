<%- include("partials/header.ejs") %>
<body>
  <%- include("partials/navbar.ejs") %>
  <div class="container">
    <div class="card" id="question-form">
      <div class="card-header">
        <h3>Realizar perguntas</h3>
      </div>

      <div class="card-body">
        <form>
          <div class="form-group">
            <label for="titulo">Título</label>
            <input
              name="titulo"
              type="text"
              placeholder="titulo"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label>Descrição</label>
            <textarea
              placeholder="Descreva sua pergunta aqui"
              class="form-control"
            ></textarea>
          </div>
          <button class="btn btn-primary">Enviar Pergunta</button>
        </form>
      </div>
    </div>
  </div>
</body>
