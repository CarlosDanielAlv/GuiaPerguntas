<%- include("partials/header.ejs") %>
<body>
  <%- include("partials/navbar.ejs") %>
  <div class="container">
    <div class="card" id="question-form">
      <div class="card-header">
        <h3>Realizar perguntas</h3>
      </div>

      <div class="card-body">
        <form method="POST" action="/questionssave">

          <div class="form-group">
            <label for="title">Título</label>
            <input type="text" placeholder="titulo" class="form-control" name="title" id="title" required/>
          </div>
          
          <div class="form-group">
            <label for="description">Descrição</label>
            <textarea placeholder="Descreva sua pergunta aqui" class="form-control" name="description" id="description" required></textarea>
          </div>

          <button class="btn btn-primary">Enviar Pergunta</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include("partials/footer.ejs") %>
